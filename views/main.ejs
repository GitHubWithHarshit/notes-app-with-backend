<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>

<body>

    <!-- main div -->
    <div class="main flex flex-col justify-between bg-zinc-900 w-full min-h-screen">
        <!-- main tag -->
        <main>

            <!-- form div    -->
            <div class=" form p-10">

                <!-- form   -->
                <form class="flex flex-col items-center text-white" action="/create" method="post">
                    <input class=" outline-none text-white-800  m-2  px-5 py-2 bg-zinc-800 rounded w-1/2"
                        placeholder="Title" type="text" name="title">
                    <textarea
                        class=" outline-none text-white-800  m-2 px-5 py-2 resize-none bg-zinc-800 rounded-lg w-1/2"
                        placeholder="Write some details" name="details"></textarea>
                    <input class="m-2 bg-blue-600 px-3 py-1 rounded-lg" value="Create task" type="submit">
                </form>

            </div>

            <!-- saved note div -->
            <div class="tasks grid place-items-center grid-cols-4">

                <% if(file.length> 0){ %>
                    <% file.forEach((task)=>{ %>
                        <div
                            class=" flex flex-col justify-between task w-72 p-5 bg-zinc-800 rounded-lg mt-5 min-h-32 overflow-hidden scroll-auto">

                            <div class="text-2xl text-slate-400 mx-2">
                                <%= task.slice(0, -4) %>
                            </div>

                            <div class="flex justify-around">
                                <a class="text-blue-400 underline" href="/file/<%= task %>">See details</a>
                                <a class="text-blue-400 underline" href="#">Edit Title</a>
                            </div>

                        </div>
                        <% }) %>
                            <% } else { %>
                                <h2 class="text-slate-500">There is not any task any more..</h2>
                                <%}%>



            </div>

        </main>

        <!-- footer -->
        <footer class="p-3 bg-zinc-800 text-2xl flex justify-center  mt-5 w-full">
            <h1 class="text-white px-2 tracking-tight">Make your notes</h1>
            <h1 class="text-blue-600">!</h1>
            <h1 class="text-white px-2 font-semibold">Easy</h1>
        </footer>

    </div>

</body>

</html>